<?php

require 'vendor/autoload.php';

use Task\Plugin\ProcessPlugin;

$project = new Task\Project('task/phpunit');

$project->inject(function ($container) {
    $container['ps'] = new ProcessPlugin;
});

$project->addTask('test', ['ps', function ($ps) {
    $ps->build('phpunit')->pipe($this->getOutput());
}]);

return $project;
